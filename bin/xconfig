#!/usr/bin/env bash

xrandr --output DP-2 --primary --mode 3840x2160 --fbmm 610x330
xrandr --output DP-4 --mode 1920x1080 --right-of DP-2  --dpi 100 --panning 1920x1080

echo Xft.dpi: 165 | xrdb -merge

xsetroot -cursor_name left_ptr -solid black -name root-window

xmodmap ~/.xmodmap

numlockx on

xset r rate 200 30
xset s off
xset b off
